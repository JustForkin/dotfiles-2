[user]
	name = Naoya INADA
	email = naoina@kuune.org
[alias]
	ci = commit
    co = checkout
    st = status
    resolve = mergetool
    glog = log --graph
[color]
	ui = auto
[core]
	editor = /usr/bin/vim
	quotepath = false
[merge]
    tool = git-vimdiff
[mergetool]
    prompt = false
[mergetool "git-vimdiff"]
	cmd = git-vimdiff.sh \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
	trustExitCode = true
