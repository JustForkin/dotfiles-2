[user]
	name = Naoya Inada
	email = naoina@kuune.org
[alias]
	ci = commit
    cia = commit --amend -C HEAD
	ciad = !git commit --amend -C HEAD --date \"$(date -R)\"
    co = checkout
    st = status
    resolve = mergetool
    glog = log --graph --date-order -C -M --pretty=format:'<%h> %ad [%an] %Cgreen%d%Creset %s' --all --date=short
    dic = diff --cached
    di = diff
    ignore = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored = !git ls-files -v | grep "^[a-z]"
[color]
	ui = auto
[core]
	editor = /usr/bin/vim
	quotepath = false
[merge]
    tool = git-vimdiff
[mergetool]
    prompt = false
[mergetool "git-vimdiff"]
	cmd = git-vimdiff.sh \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
	trustExitCode = true
[push]
	default = simple
[diff]
	algorithm = histogram
[pager]
	# They should use less because correct highlight color.
	log = diff-highlight | less -i
	show = diff-highlight | less -i
	diff = diff-highlight | less -i
[web]
	browser = xdg-open
[ghq]
	root = ~/work/src
[github]
	user = naoina
